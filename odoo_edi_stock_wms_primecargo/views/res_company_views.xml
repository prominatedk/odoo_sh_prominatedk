<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_view_company_form" model="ir.ui.view">
            <field name="name">inherited_view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="odoo_edi.inherited_view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='odoo_edi']" position="inside">
                    <group name="odoo_edi_primecargo" string="PrimeCargo Details">
                        <group>
                            <field name="primecargo_username"/>
                            <field name="primecargo_password"/>
                        </group>
                        <group>
                            <field name="primecargo_ownercode"/>
                            <field name="primecargo_template_code"/>
                            <field name="primecargo_shipping_product_id"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
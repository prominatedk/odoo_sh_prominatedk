<odoo>
    <data>
        <record id="inherit_account_journal_dashboard_kanban_view" model="ir.ui.view">
            <field name="name">account.journal.dashboard.kanban.bankintegration</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="bank_journal_cta"]' position='inside'>
                    <button t-if="dashboard.bank_statements_source == 'bankintegration_import' &amp;&amp; dashboard.number_to_reconcile == 0" type="object" name="action_bankintegration_import_now" class="btn btn-primary btn-sm" groups="account.group_account_manager">Import from bankintegration now</button>
                    <a t-if="dashboard.bank_statements_source == 'bankintegration_import' &amp;&amp; dashboard.number_to_reconcile > 0" type="object" name="action_bankintegration_import_now" class="oe_inline" groups="account.group_account_manager">Import from bankintegration now</a>
                    <a t-if="dashboard.bank_statements_source == 'bankintegration_import'" type="object" name="action_send_bankintegration_payments" class="oe_inline" groups="account.group_account_manager">Send payments now</a>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
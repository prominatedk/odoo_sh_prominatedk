<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account.inherit.bankintegration</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='invoicing_settings']" position="after">
                    <h2>Bankintegration</h2>
                    <div class="row mt16 o_settings_container" id="oh_bankintegration" groups="account.group_account_user">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Payment margin" for="bankintegration_payment_margin" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_payment_margin"/>
                                    </div>
                                    <div class="row mt16">
                                        <label string="Default autopay" for="bankintegration_autopay" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_autopay" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Use default bban" for="bankintegration_use_odoo_bban" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_use_odoo_bban" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Set for payment after validate?" for="bankintegration_send_on_validate" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_send_on_validate" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Default payment journal" for="bankintegration_payment_journal_id" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_payment_journal_id" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="ERP Provider" for="bankintegration_erp_provider" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_erp_provider" password="True" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="API Key" for="bankintegration_provider_api_key" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_provider_api_key" password="True" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Use note as label?" for="bankintegration_statement_note_as_label" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_statement_note_as_label" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Check payment status on payment" for="bankintegration_check_payment_status" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_check_payment_status" />
                                    </div>
                                    <div class="row mt16">
                                        <label string="Use extended import?" for="bankintegration_extended_import_format" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_extended_import_format" />
                                    </div>
                                    <div class="row mt16">
                                        <label for="bankintegration_last_entry_date_as_statement_date" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_last_entry_date_as_statement_date" />
                                    </div>
                                    <div class="row mt16">
                                        <label for="bankintegration_transaction_accounting_date" class="col-lg-5 o_light_label"/>
                                        <field name="bankintegration_transaction_accounting_date" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>    
            </field>    
        </record>
    </data>
</odoo>

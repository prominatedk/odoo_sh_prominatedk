<odoo>
    <data>
        <record id="inherit_view_company_form" model="ir.ui.view">
            <field name="name">res.company.form.inherit.bankintegration</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <paage name="oh_bankintegration" string="Bankintegration.dk">
                        <group>
                            <group>
                                <field name="bankintegration_erp_provider" password="True" groups="base.group_no_one"/>
                                <field name="bankintegration_provider_api_key" password="True" groups="base.group_no_one"/>
                                <field name="bankintegration_extended_import_format"/>
                                <field name="bankintegration_last_entry_date_as_statement_date"/>
                                <field name="bankintegration_check_payment_status"/>
                                <field name="bankintegration_use_odoo_bban"/>
                            </group>
                            <group>
                                <field name="bankintegration_payment_journal_id"/>
                                <field name="bankintegration_payment_margin"/>
                                <field name="bankintegration_autopay"/>
                                <field name="bankintegration_send_on_validate"/>
                                <field name="bankintegration_statement_note_as_label"/>
                                <field name="bankintegration_transaction_accounting_date"/>
                            </group>
                        </group>
                    </paage>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
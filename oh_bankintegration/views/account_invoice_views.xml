<odoo>
    <data>
        <record id="inherit_invoice_supplier_tree" model="ir.ui.view">
            <field name="name">account.invoice.supplier.tree.bankintegration</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_tree" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="bankintegration_payment_autopay" class="oe_inline" />
                </xpath>
                <xpath expr="//field[@name='date_due']" position="after">
                    <field name="bankintegration_payment_date" class="oe_inline" />
                    <field name="bankintegration_payment_journal_id" class="oe_inline" />
                </xpath> 
                <xpath expr="//field[@name='state']" position="after">
                    <field name="bankintegration_payment_status" class="oe_inline" />
                </xpath>
            </field>
        </record>
        <record id="inherit_invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.bankintegration_payment</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_invoice_draft']" position="after">
                    <field name="bankintegration_payment_status" class="oe_inline" invisible="1" />
                    <button type="object" name="action_reset_bankintegration_bankintegration_payment_status" string="Set for payment again" attrs="{'invisible': [('bankintegration_payment_status', 'not in', ['rejected', 'failed'])]}" />
                </xpath>
                <xpath expr="//field[@name='date_due']" position="after">
                    <!-- <field name="state" invisible="1" /> -->
                    <field name="bankintegration_payment_date" class="oe_inline" attrs="{'readonly': [('state', '=', 'paid')]}"/>
                    <field name="bankintegration_payment_journal_id" class="oe_inline" />
                    <field name="payment_reference" class="oe_inline" />
                    <field name="bankintegration_payment_autopay" class="oe_inline" />
                </xpath>
                <xpath expr="//field[@name='date']" position="after">
                    <field name="bankintegration_payment_status" class="oe_inline" />
                    <field name="bankintegration_payment_error" class="oe_inline" />
                </xpath>
                <xpath expr='//field[@name="currency_id"]' position="after">
                    <label for="payment_fik_number_payment_code" string="FIK Number" class="oe_inline" attrs="{'invisible': [('type', 'not in', ['in_invoice'])]}"/>
                    <div name="fik_number_data" attrs="{'invisible': [('type', 'not in', ['in_invoice'])]}">
                        <field name="payment_fik_number_payment_code" class="oe_inline" nolabel="1"/> &lt;
                        <field name="payment_fik_number_payment_string" class="oe_inline" nolabel="1" attrs="{ 'invisible': [('payment_fik_number_payment_code', 'in', ['+01', '+73'])] }"/> +
                        <field name="payment_fik_number_creditor" class="oe_inline" nolabel="1"/> &lt;
                    </div>
                    <field name="payment_fik_number" attrs="{'invisible': [('type', 'not in', ['in_invoice'])]}" groups="base.group_no_one"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
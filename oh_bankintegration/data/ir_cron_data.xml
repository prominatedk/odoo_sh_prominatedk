<odoo>
    <data noupdate="0">
	    <record model="ir.cron" id="cronjob_bankintegration_payment">
            <field name='name'>Bankintegration: Automatic Vendor Bill Payment</field>
            <field name='interval_type'>minutes</field>
            <field name='interval_number'>30</field>
            <field name="priority">5</field>
            <field name="model_id" ref="model_account_invoice"/>
            <field name="state">code</field>
            <field name="code">model.cron_transfer_bankintegration_payments()</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
        </record>
        <record model="ir.cron" id="cronjob_bankintegration_payment_status">
            <field name='name'>Bankintegration: Payment Status</field>
            <field name='interval_number'>12</field>
            <field name='interval_type'>hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="model_id" ref="model_bank_integration_request"/>
            <field name="state">code</field>
            <field name="code">model.cron_bankintegration_payment_status()</field>
        </record>
        <record model="ir.cron" id="cronjob_bankintegration_import">
            <field name='name'>Bankintegration: Import Bank statements</field>
            <field name='interval_number'>12</field>
            <field name='interval_type'>hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False" />
            <field name="model_id" ref="model_account_journal"/>
            <field name="state">code</field>
            <field name="code">model.cron_bankintegration_bank_statement_import()</field>
        </record>
    </data>  
</odoo>

<odoo>
    <data>
        <record id="account_bankintegration_payment_view_form" model="ir.ui.view">
            <field name="name">account.bankintegration.payment.form</field>
            <field name="model">account.bankintegration.payment</field>
            <field name="arch" type="xml">
                <form string="Confirm payment">
                    <group>
                        <p class="oe_gray">
                            Are you sure that you want to send the following invoices to bankintegration for payment?
                        </p>
                    </group>
                    <group>
                        <field name="invoice_ids" readonly="1" nolabel="1">
                            <tree>
                                <field name="number"/>
                                <field name="date_due"/>
                                <field name="bankintegration_payment_date"/>
                                <field name="state"/>
                                <field name="bankintegration_payment_status"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Confirm" name="action_pay_with_bankintegration" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_account_bankintegration_payment" model="ir.actions.act_window">
            <field name="name">Pay with bankintegration</field>
            <field name="res_model">account.bankintegration.payment</field>
            <field name="binding_model_id" ref="account.model_account_invoice"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="oh_bankintegration.account_bankintegration_payment_view_form"/>
            <field name="groups_id" eval="[(4, ref('account.group_account_manager'))]"/>
        </record>
    </data>
</odoo>
<odoo>
    <data>
        <record id="sale_order_config_settings_inherit" model="ir.ui.view">
            <field name="name">Webshop Integration Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='sales_settings_invoicing_policy']/.." position="after">
                    <h2>Webshop Integration</h2>
                    <div class="row mt16 o_settings_container" id="webshop_integration">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Base URL</span>
                                <div class="text-muted">
                                    <field name="integration_api_url"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Token</span>
                                <div class="text-muted">
                                    <field name="integration_auth_token"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Analytic Account</span>
                                <div class="text-muted">
                                    <field name="integration_analytic_account_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Placeholder Partner</span>
                                <div class="text-muted">
                                    <field name="placeholder_partner_id"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <div class="text-muted">
                                    <field name="integration_in_production"/>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">In Production</span>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
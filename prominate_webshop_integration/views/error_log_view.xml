<odoo>
    <data>
        <record id="integration_error_log_tree_view" model="ir.ui.view">
            <field name="name">Error Log</field>
            <field name="model">integration.error.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="error_date"/>
                    <field name="msg"/>
                    <field name="action"/>
                </tree>
            </field>
        </record>
    
        <record id="action_error_log_tree_view" model="ir.actions.act_window">
            <field name="name">Error Log</field>
            <field name="res_model">integration.error.log</field>
            <!--<field name="view_type">form</field>-->
            <field name="view_mode">tree</field>
        </record>

        <menuitem
            name="Error Log"
            id="menu_integration_error_log"
            parent="sale.menu_sale_config"
            action="action_error_log_tree_view"
            sequence="20"/>
    </data>
</odoo>
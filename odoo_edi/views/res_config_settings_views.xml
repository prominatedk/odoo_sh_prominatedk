<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_view_general_configuration" model="ir.ui.view">
            <field name="name">inherited_view_general_configuration</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='integration']" position="after">
                    <h2>EDI</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_odoo_edi_invoice"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_odoo_edi_invoice"/>
                                <div class="content-group" attrs="{'invisible': [('module_odoo_edi_invoice','=',False)]}" id="odoo_edi_invoice">
                                    <div class="mt16 text-warning"><strong>Save</strong> this page to activate the feature.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_odoo_edi_vendorbill"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_odoo_edi_vendorbill"/>
                                <div class="content-group" attrs="{'invisible': [('module_odoo_edi_vendorbill','=',False)]}" id="odoo_edi_vendorbill">
                                    <div class="mt16 text-warning"><strong>Save</strong> this page to activate the feature.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_odoo_edi_sale"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_odoo_edi_sale"/>
                                <div class="content-group" attrs="{'invisible': [('module_odoo_edi_sale','=',False)]}" id="odoo_edi_saleorder">
                                    <div class="mt16 text-warning"><strong>Save</strong> this page to activate the feature.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="module_odoo_edi_purchase"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="module_odoo_edi_purchase"/>
                                <div class="content-group" attrs="{'invisible': [('module_odoo_edi_purchase','=',False)]}" id="odoo_edi_purchase">
                                    <div class="mt16 text-warning"><strong>Save</strong> this page to activate the feature.</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="odoo_edi_token"/>
                                <field name="odoo_edi_token" password="True" attrs="{ 'required': [('edi_mode','in', ['production','test'])] }"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="edi_registration"/>
                                <field name="edi_registration"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="edi_mode"/>
                                <field name="edi_mode"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

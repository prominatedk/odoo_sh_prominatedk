<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_view_company_form" model="ir.ui.view">
            <field name="name">inherited_view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_registry']" position="after">
                    <field name="gln"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="odoo_edi" string="FlexEDI">
                        <group>
                            <group string="Authentication" name="odoo_edi_authentication">
                                <field name="edi_mode"/>
                                <field name="odoo_edi_token"/>
                                <field name="edi_registration"/>
                            </group>
                            <group>
                            
                            </group>
                        </group>
                        <group string="Units of Measure" name="odoo_edi_uom">
                            <field name="flexedi_uom_mapping_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="uom_id"/>
                                    <field name="edi_uom_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
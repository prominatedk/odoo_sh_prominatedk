<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_view_company_form" model="ir.ui.view">
            <field name="name">inherited_view_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="odoo_edi" string="FlexEDI">
                        <group name="odoo_edi_config">
                            <group name="odoo_edi_base_config" string="Communication">
                                <field name="odoo_edi_token" password="True"/>
                                <field name="edi_mode"/>
                                <field name="edi_registration"/>
                                <field name="gln" attrs="{ 'invisible': [('edi_mode', '!=', 'gln')] }"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
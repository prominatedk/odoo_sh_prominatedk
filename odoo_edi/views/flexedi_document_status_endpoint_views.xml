<odoo>
    <data>
        <record id="flexedi_document_status_endpoint_view_form" model="ir.ui.view">
            <field name="name">flexedi.document.status.endpoint.form.view</field>
            <field name="model">flexedi.document.status.endpoint</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Status Endpoint">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="model"/>
                                <field name="endpoint"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="flexedi_document_status_endpoint_view_tree" model="ir.ui.view">
            <field name="name">flexedi.document.status.endpoint.tree.view</field>
            <field name="model">flexedi.document.status.endpoint</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="model"/>
                    <field name="endpoint"/>
                </tree>
            </field>
        </record>
        <record id="action_open_flexedi_document_status_endpoint_tree" model="ir.actions.act_window">
            <field name="name">Document Status Endpoints</field>
            <field name="res_model">flexedi.document.status.endpoint</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_empty_folder">
                    There are no status endpoints yet. Please install one or more modules that implement status endpoints in order to have them listed here
                </p>
            </field>
        </record>
        <menuitem id="menu_flexedi_document_status_endpoint" parent="odoo_edi.menu_technical_odoo_edi" action="action_open_flexedi_document_status_endpoint_tree"/>
    </data>
</odoo>
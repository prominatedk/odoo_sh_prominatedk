<odoo>
    <record id="inherit_view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.zinc_wms</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='client_order_ref']" position="after">
                <field name="zinc_wms_order_number" readonly="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="zinc_wms_orders" string="Zinc WMS" groups="base.group_no_one">
                    <group string="WMS Orders">
                        <field name="flexedi_zinc_wms_order_ids" nolabel="1" readonly="1">
                            <tree create="0" edit="0" delete="0" decoration-danger="state in ['failed_vans', 'failed_internal']" decoration-success="state in ['sent', 'validated', 'recieved', 'processed']" decoration-info="state in ['pending']">
                                <field name="create_date" readonly="1"/>
                                <field name="document_format_id" readonly="1"/>
                                <field name="edi_uuid" readonly="1"/>
                                <field name="state" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
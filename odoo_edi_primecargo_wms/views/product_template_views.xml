<odoo>
    <data>
        <record id="inherited_product_form_view" model="ir.ui.view">
            <field name="name">product.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <field name="template_in_primecargo_wms" invisible="1"/>
                    <button class="oe_stat_button" name="action_use_in_primecargo_wms"
                        type="object" icon="fa-object-group" string="Enable PrimeCargo" attrs="{ 'invisible': [('template_in_primecargo_wms','=',True)] }"/>
                    <button class="oe_stat_button" name="action_use_in_primecargo_wms"
                        type="object" icon="fa-object-group" string="Update PrimeCargo" attrs="{ 'invisible': [('template_in_primecargo_wms','=',False)] }"/>
                </xpath>
                <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                    <field name="primecargo_customs_description"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
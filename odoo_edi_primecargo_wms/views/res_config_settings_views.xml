<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_stock_config_settings" model="ir.ui.view">
            <field name="name">PrimeCargo EDI Settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//h2[@id='schedule_info']" position="before">
                    <h2>PrimeCargo EDI</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">                    
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="primecargo_username"/>
                                <field name="primecargo_username"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">                        
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="primecargo_password"/>
                                <field name="primecargo_password"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">                          
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="primecargo_ownercode"/>
                                <field name="primecargo_ownercode"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">                   
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="primecargo_template_code"/>
                                <field name="primecargo_template_code"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">                  
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="primecargo_shipping_product_id"/>
                                <field name="primecargo_shipping_product_id"/>
                            </div>
                        </div>
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">                  
                                <label for="primecargo_autovalidate_done"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <field name="primecargo_autovalidate_done"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>